<%= form_for @article do |f| %>
  <%= f.label :author %>:
  <%= f.text_field :author %>><br>

  <%= f.label :title %><br>
  <%= f.text_area :title %> <br>

  <%= f.label :body %><br>
  <%= f.text_area :body %> <br>

  <%= f.label :categories %><br>
  <%= collection_check_boxes :article, :category_ids, @categories, :id, :name %> <br>

  <%= f.submit %>
<% end %>
